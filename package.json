{
  "name": "silverload",
  "homepage": "./",
  "version": "4.1.1",
  "private": true,
  "author": "Viktor Dochev",
  "description": "A thin and lite Image Browser app",
  "main": "build/main.js",
  "scripts": {
    "start:dev": "webpack serve",
    "build:prod": "webpack --env production & yarn electron:package & yarn run clean",
    "build:install": "webpack --env production & yarn electron:make & yarn run clean",
    "electron:run": "yarn run electron:build & cross-env ELECTRON_START_URL=http://localhost:8080 electron --js-flags=\"--experimental-wasm-threads --experimental-wasm-bulk-memory\" . & yarn run clean",
    "electron:install": "electron-rebuild",
    "electron:package": "yarn run electron:bundle & electron-forge package",
    "electron:make": "yarn run electron:bundle & electron-forge make",
    "electron:build": "ts-node --project src/electron/tsconfig.json rollup.config.ts",
    "electron:bundle": "cross-env production=true ts-node -P src/electron/tsconfig.json rollup.config.ts",
    "clean": "rimraf build",
    "lint": "run-p -n -l lint:eslint lint:stylelint",
    "lint:eslint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:stylelint": "stylelint \"src/**/*.scss\"",
    "lint:fix:eslint": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "lint:fix:stylelint": "stylelint \"src/**/*.scss\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,scss}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,scss}\"",
    "document:build": "ts-node doc.config.ts"
  },
  "precommit": {
    "run": "lint:fix:eslint, lint:fix:stylelint, format, document:build"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.59",
    "@electron-forge/maker-deb": "6.0.0-beta.59",
    "@electron-forge/maker-rpm": "6.0.0-beta.59",
    "@electron-forge/maker-squirrel": "6.0.0-beta.59",
    "@electron-forge/maker-zip": "6.0.0-beta.59",
    "@ffmpeg/ffmpeg": "^0.10.1",
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-brands-svg-icons": "^5.15.4",
    "@fortawesome/free-regular-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.15",
    "@reduxjs/toolkit": "^1.6.1",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/better-sqlite3": "^5.4.3",
    "@types/compression-webpack-plugin": "^6.0.6",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/node": "^16.4.13",
    "@types/react": "^17.0.16",
    "@types/react-dom": "^17.0.9",
    "@types/react-redux": "^7.1.18",
    "@types/react-router-dom": "^5.1.8",
    "@types/terser-webpack-plugin": "^5.0.4",
    "@types/webpack-dev-server": "^3.11.5",
    "@types/webpack-env": "^1.16.2",
    "@types/webpack-merge": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "antd": "4.16.10",
    "clean-webpack-plugin": "4.0.0-alpha.0",
    "compression-webpack-plugin": "^8.0.1",
    "cross-env": "^7.0.3",
    "csp-html-webpack-plugin": "^5.1.0",
    "css-loader": "^6.2.0",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "electron": "^10.1.6",
    "electron-squirrel-startup": "^1.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "file-type": "^16.5.3",
    "html-inline-css-webpack-plugin": "^1.11.1",
    "html-webpack-plugin": "^5.3.2",
    "inline-chunk-html-plugin": "^1.1.1",
    "less": "^4.1.1",
    "less-loader": "^10.0.1",
    "lzutf8": "^0.6.0",
    "object-hash": "^2.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "redux": "^4.1.1",
    "redux-thunk": "^2.3.0",
    "reflect-metadata": "^0.1.13",
    "replace-in-file": "^6.2.0",
    "rollup": "^2.56.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.37.5",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.2.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.20.1",
    "terser-webpack-plugin": "^5.1.4",
    "ts-loader": "9.2.5",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "typescript-bundle": "1.0.17",
    "uuid": "^8.3.2",
    "webpack": "^5.49.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "5.8.0"
  },
  "dependencies": {
    "@ffmpeg/core": "^0.10.0",
    "better-sqlite3": "^7.4.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "arch": "x64",
        "asar": true,
        "dir": "build",
        "icon": "icon.ico",
        "extraResource": [
          "build/better_sqlite3.node"
        ],
        "ignore": [
          ".idea",
          ".node",
          "src",
          "bundle*",
          ".iml",
          ".ts",
          ".db",
          ".adoc",
          ".ico",
          ".log",
          ".gitignore",
          "node_modules",
          "tsconfig.json",
          "tsconfig.tsbuildinfo",
          ".lock"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "silverload",
            "setupIcon": "icon.ico",
            "iconUrl": "file:///D:/Electron/silverload/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip"
        }
      ]
    }
  }
}
