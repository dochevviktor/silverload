{
  "name": "silverload",
  "homepage": "./",
  "version": "3.1.2",
  "private": true,
  "author": "Viktor Dochev",
  "description": "A thin and lite Image Browser app",
  "main": "build/main.js",
  "scripts": {
    "start:dev": "webpack serve",
    "stop:dev": "yarn run clean & taskkill /F /IM node.exe",
    "build:prod": "webpack --env production & yarn electron:package & yarn run clean",
    "build:install": "webpack --env production & yarn electron:make & yarn run clean",
    "electron:run": "yarn run electron:build & cross-env ELECTRON_START_URL=http://localhost:8080 electron . & yarn run stop:dev",
    "electron:install": "electron-rebuild",
    "electron:package": "yarn run electron:bundle & electron-forge package",
    "electron:make": "yarn run electron:bundle & electron-forge make",
    "electron:build": "ts-node --project src/server/tsconfig.json rollup.config.ts",
    "electron:bundle": "cross-env production=true ts-node --project src/server/tsconfig.json rollup.config.ts",
    "clean": "rimraf build",
    "lint": "run-p -n -l lint:eslint lint:stylelint",
    "lint:eslint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:stylelint": "stylelint \"src/**/*.scss\"",
    "lint:fix:eslint": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "lint:fix:stylelint": "stylelint \"src/**/*.scss\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,scss}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,scss}\"",
    "document:build": "ts-node doc.config.ts"
  },
  "precommit": {
    "run": "lint:fix:eslint, lint:fix:stylelint, format, document:build"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-brands-svg-icons": "^5.15.1",
    "@fortawesome/free-regular-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.13",
    "@reduxjs/toolkit": "^1.4.0",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@rollup/plugin-typescript": "^6.1.0",
    "@types/better-sqlite3": "^5.4.1",
    "@types/compression-webpack-plugin": "^6.0.0",
    "@types/copy-webpack-plugin": "^6.3.0",
    "@types/node": "^14.14.10",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-redux": "^7.1.11",
    "@types/react-router-dom": "^5.1.6",
    "@types/terser-webpack-plugin": "^5.0.2",
    "@types/webpack-dev-server": "^3.11.1",
    "@types/webpack-env": "^1.16.0",
    "@types/webpack-merge": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "antd": "^4.8.6",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^6.1.1",
    "copy-webpack-plugin": "^6.3.2",
    "cross-env": "^7.0.2",
    "csp-html-webpack-plugin": "^4.0.0",
    "css-loader": "^5.0.1",
    "css-minimizer-webpack-plugin": "^1.1.5",
    "electron": "^10.1.6",
    "electron-squirrel-startup": "^1.0.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "html-inline-css-webpack-plugin": "^1.9.1",
    "html-webpack-plugin": "^4.5.0",
    "inline-chunk-html-plugin": "^1.1.1",
    "mime-types": "^2.1.27",
    "pre-commit": "^1.2.2",
    "prettier": "^2.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "replace-in-file": "^6.1.0",
    "rollup": "^2.33.3",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.29.0",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0",
    "terser-webpack-plugin": "^5.0.3",
    "ts-loader": "8.0.11",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2",
    "typescript-bundle": "1.0.17",
    "uuid": "^8.3.1",
    "webpack": "^5.8.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "5.4.0"
  },
  "asciiDocVariableMap": {
    "electron": ":verElectron:",
    "react": ":verReact:",
    "redux": ":verRedux:",
    "typescript": ":verTypescript:",
    "sass": ":verSass:",
    "@fortawesome/react-fontawesome": ":verFontAwesome:",
    "antd": ":verAntDesign:",
    "eslint": ":verESLint:",
    "stylelint": ":verStyleLint:",
    "prettier": ":verPrettier:",
    "webpack": ":verWebpack:",
    "rollup": ":verRollup:"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "react",
      "@typescript-eslint",
      "prettier"
    ],
    "env": {
      "browser": true,
      "jasmine": true,
      "jest": true
    },
    "rules": {
      "prettier/prettier": [
        "warn"
      ],
      "@typescript-eslint/explicit-member-accessibility": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "react/no-unescaped-entities": 0,
      "@typescript-eslint/no-var-requires": 0,
      "no-undef": 0,
      "padding-line-between-statements": [
        "warn",
        {
          "blankLine": "always",
          "prev": "*",
          "next": "return"
        },
        {
          "blankLine": "always",
          "prev": [
            "const",
            "let",
            "var"
          ],
          "next": "*"
        },
        {
          "blankLine": "any",
          "prev": [
            "const",
            "let",
            "var"
          ],
          "next": [
            "const",
            "let",
            "var"
          ]
        },
        {
          "blankLine": "always",
          "prev": "if",
          "next": "if"
        }
      ]
    },
    "settings": {
      "react": {
        "pragma": "React",
        "version": "detect"
      }
    },
    "parser": "@typescript-eslint/parser"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "fix": true,
    "formatter": "verbose",
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "at-rule-no-unknown": null,
      "scss/at-rule-no-unknown": true
    },
    "syntax": "scss"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "es5",
    "endOfLine": "auto",
    "jsxBracketSameLine": true
  },
  "dependencies": {
    "better-sqlite3": "^7.1.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "arch": "x64",
        "asar": true,
        "dir": "build",
        "icon": "icon.ico",
        "extraResource": [
          "build/better_sqlite3.node"
        ],
        "ignore": [
          ".idea",
          ".node",
          "src",
          "bundle*",
          ".iml",
          ".ts",
          ".db",
          ".adoc",
          ".ico",
          ".log",
          ".gitignore",
          "node_modules",
          "tsconfig.json",
          "tsconfig.tsbuildinfo",
          ".lock"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "silverload",
            "setupIcon": "icon.ico",
            "iconUrl": "file:///D:/Electron/silverload/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip"
        }
      ]
    }
  }
}
